{% extends "base.jinja" %}

{% block content %}

<h2> Our Books </h2>

{% for book in book_list %}
<div class="titleInList">
    <p>
        <a href="{{ url_for('book', book_title=book.title|replace(' ', '-')) }}"> {{ book.title }} </a>
    </p>
    <form class="form-inline" action="/our-books/remove/{{ book.title }}" method="POST">
            <input type="submit" value="Remove">
    </form>
</div>
{% endfor %}

<h3>Want to add a new book to the library?</h3>

<form class="form-inline" action="/our-books" method="post">
    <label for="title">Title</label>
    <input type="text" name="title" id="title">
    <label for="author">Author</label>
    <input type="text" name="author" id="author">
    <label for="genre">Genre</label>
    <input type="text" name="genre" id="genre">
    <label for="checked out">Checked Out?</label>
    <input type="checkbox" name="checked out" id="checked out">
    <input type="submit" value="Add Book">
</form>

{% endblock%}

